<?xml version="1.0" encoding="utf-8"?><com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:layout_margin="8dp"    app:strokeColor="@color/material_on_surface_stroke"    app:strokeWidth="1dp">    <androidx.constraintlayout.widget.ConstraintLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:padding="5dp"        tools:viewBindingIgnore="true">        <com.facebook.shimmer.ShimmerFrameLayout            android:id="@+id/image_view_movie"            android:layout_width="100dp"            android:layout_height="100dp"            android:background="@drawable/ic_picture_placeholder"            android:backgroundTint="@color/gray_EAECEF"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintStart_toStartOf="parent"            app:layout_constraintTop_toTopOf="parent"            app:shimmer_auto_start="false"            app:shimmer_base_alpha="1"            app:shimmer_highlight_alpha=".5" />        <com.facebook.shimmer.ShimmerFrameLayout            android:id="@+id/text_view_title"            android:layout_width="150dp"            android:layout_height="25dp"            android:layout_marginStart="10dp"            android:backgroundTint="@color/gray_EAECEF"            android:textAppearance="?attr/textAppearanceHeadline6"            app:layout_constraintStart_toEndOf="@+id/image_view_movie"            app:layout_constraintTop_toTopOf="@+id/image_view_movie"            app:shimmer_auto_start="false"            app:shimmer_base_alpha="1"            app:shimmer_highlight_alpha=".5"            tools:text="Movie Title" />        <com.facebook.shimmer.ShimmerFrameLayout            android:id="@+id/text_view_details"            android:layout_width="200dp"            android:layout_height="70dp"            android:backgroundTint="@color/gray_EAECEF"            android:ellipsize="end"            android:maxLines="4"            android:text="@string/lorem_ipsum_string"            android:textAppearance="?attr/textAppearanceBody2"            android:textColor="?android:attr/textColorSecondary"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintStart_toStartOf="@+id/text_view_title"            app:layout_constraintTop_toBottomOf="@+id/text_view_title"            app:shimmer_auto_start="false"            app:shimmer_base_alpha="1"            app:shimmer_highlight_alpha=".5" />        <com.facebook.shimmer.ShimmerFrameLayout            android:id="@+id/image_view_star_score"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:background="@drawable/ic_star_full_5"            android:backgroundTint="@color/gray_EAECEF"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintTop_toTopOf="parent"            app:shimmer_auto_start="false"            app:shimmer_base_alpha="1"            app:shimmer_highlight_alpha=".5" />        <com.facebook.shimmer.ShimmerFrameLayout            android:id="@+id/text_view_score"            android:layout_width="30dp"            android:layout_height="30dp"            android:backgroundTint="@color/gray_EAECEF"            app:layout_constraintBottom_toBottomOf="@+id/image_view_star_score"            app:layout_constraintEnd_toStartOf="@+id/image_view_star_score"            app:layout_constraintTop_toTopOf="@+id/image_view_star_score"            app:shimmer_auto_start="false"            app:shimmer_base_alpha="1"            app:shimmer_highlight_alpha=".5"            tools:text="5/5" />    </androidx.constraintlayout.widget.ConstraintLayout></com.google.android.material.card.MaterialCardView>